---
layout: base.njk
title: Blog
permalink: /blog/
eleventyNavigation:
  key: Blog
  order: 2
---

<div class="container">
  <h1>Blog Posts</h1>
  
  <div class="post-list">
    {%- for post in collections.posts | reverse -%}
    {%- if not post.data.draft -%}
    <article class="post-card">
      <h2><a href="{{ post.url }}">{{ post.data.title }}</a></h2>
      <div class="post-meta">
        <time datetime="{{ post.date | htmlDateString }}">{{ post.date | dateDisplay }}</time>
        {%- if post.data.tags.length > 0 -%}
        <span class="tags">
          {%- for tag in post.data.tags -%}
          <a href="/tags/{{ tag | slug }}/" class="tag">{{ tag }}</a>
          {%- endfor -%}
        </span>
        {%- endif -%}
      </div>
      {%- if post.data.excerpt -%}
      <p>{{ post.data.excerpt }}</p>
      {%- endif -%}
    </article>
    {%- endif -%}
    {%- endfor -%}
  </div>
</div>