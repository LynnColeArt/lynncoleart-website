---
layout: base.njk
---

<article class="page">
  <header class="page-header">
    <h1>{{ title }}</h1>
  </header>
  
  <div class="page-content">
    {{ content | safe }}
  </div>
</article>

<style>
.page-header {
  margin-bottom: 2rem;
  padding-bottom: 1rem;
  border-bottom: 1px solid var(--border-color);
}

.page-content {
  max-width: 65ch;
}

.page-content img {
  max-width: 100%;
  height: auto;
  border-radius: 0.5rem;
  margin: 2rem 0;
}

.page-content blockquote {
  border-left: 4px solid var(--purple-primary);
  padding-left: 1rem;
  margin: 2rem 0;
  color: var(--text-secondary);
  font-style: italic;
}

.page-content ul,
.page-content ol {
  margin-bottom: 1.5rem;
  padding-left: 2rem;
}

.page-content li {
  margin-bottom: 0.5rem;
}
</style>