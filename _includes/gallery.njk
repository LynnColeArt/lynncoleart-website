---
layout: base.njk
---

<article class="gallery-page">
  <header class="gallery-header">
    <h1>{{ title }}</h1>
    <div class="gallery-meta">
      <time datetime="{{ date | htmlDateString }}">{{ date | dateDisplay }}</time>
      {% if tags %}
      <div class="gallery-tags">
        {% for tag in tags %}
        <a href="/tags/{{ tag | slug }}/" class="tag">#{{ tag }}</a>
        {% endfor %}
      </div>
      {% endif %}
    </div>
  </header>
  
  <div class="gallery-content">
    {% if image %}
    <div class="gallery-main-image">
      <img src="{{ image }}" alt="{{ imageAlt or title }}" />
    </div>
    {% endif %}
    
    <div class="gallery-description">
      {{ content | safe }}
    </div>
  </div>
</article>

<style>
.gallery-header {
  margin-bottom: 2rem;
  padding-bottom: 1rem;
  border-bottom: 1px solid var(--border-color);
}

.gallery-meta {
  color: var(--text-secondary);
  font-size: 0.9rem;
  margin-top: 1rem;
}

.gallery-tags {
  margin-top: 1rem;
}

.gallery-main-image {
  margin: 2rem 0;
  text-align: center;
}

.gallery-main-image img {
  max-width: 100%;
  height: auto;
  border-radius: 0.5rem;
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5);
  border: 1px solid var(--border-color);
}

.gallery-description {
  max-width: 65ch;
  margin: 2rem auto;
}
</style>