---
pagination:
  data: collections
  size: 1
  alias: tag
  filter:
    - all
    - posts
    - tagList
    - galleries
  addAllPagesToCollections: true
layout: base.njk
eleventyComputed:
  title: "Posts tagged '{{ tag }}'"
permalink: /tags/{{ tag | slug }}/
---

<div class="container">
  <h1>Posts tagged "{{ tag }}"</h1>
  
  <div class="post-list">
    {%- for post in collections[tag] | reverse -%}
    {%- if post.data.layout == 'post.njk' and not post.data.draft -%}
    <article class="post-card">
      <h2><a href="{{ post.url }}">{{ post.data.title }}</a></h2>
      <div class="post-meta">
        <time datetime="{{ post.date | htmlDateString }}">{{ post.date | dateDisplay }}</time>
      </div>
      {%- if post.data.excerpt -%}
      <p>{{ post.data.excerpt }}</p>
      {%- endif -%}
    </article>
    {%- endif -%}
    {%- endfor -%}
  </div>
  
  <p><a href="/blog/">‚Üê Back to all posts</a></p>
</div>